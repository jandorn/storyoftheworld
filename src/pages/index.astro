---
import BaseLayout from "../layouts/BaseLayout.astro";
import WorldMap from "../components/WorldMap.astro";
import PastCountries from "../components/PastCountries.astro";
import CountDownTimer from "../components/CountDownTimer.vue"
import Newsletter from "../components/Newsletter.vue";
---

<BaseLayout>
	<div class="absolute flex items-center w-full whitespace-nowrap justify-end space-x-reverse space-x-1 text-sm -top-[1.75em] left-0 h-6">
		<PastCountries />
	</div>
	<div class="absolute top-0 md:-top-[1.5em] left-1/2 transform -translate-x-1/2">
		<CountDownTimer client:load />
	</div>
	<div class="hidden md:block absolute uppercase text-primary text-xl w-32 text-center top-4 left-4">
		Story of the World
	</div>
	<div class="flex items-center w-full h-full">
		<WorldMap />
	</div>
	<div class="absolute bottom-0 left-0 md:left-20 z-10">
		<Newsletter client:load />
	</div>
</BaseLayout>
